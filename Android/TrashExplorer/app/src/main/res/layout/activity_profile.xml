<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="balint.andor.trashexplorer.ProfileActivity"
    android:background="@drawable/bg"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nature"/>
            <TextView
                android:id="@+id/report_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ReportText"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/username_tv"
                style="@style/ProfileText"/>
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ProfileText"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/email_tv"
                style="@style/ProfileText"/>
            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ProfileText"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/register_date"
                style="@style/ProfileText"/>
            <TextView
                android:id="@+id/dateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ProfileText"
                android:textAlignment="textEnd"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reports"
            style="@style/ProfileText"
            android:textStyle="italic|bold"
            android:layout_marginTop="?attr/actionBarSize"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#55000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.ihsanbal.wiv.AspectRatioLayout
                android:layout_width="128dp"
                android:layout_height="128dp"
                app:aspect_ratio="1"
                app:dimension_to_adjust="height"
                android:layout_marginTop="16dp">
                <com.ihsanbal.wiv.MediaView
                    android:id="@+id/mediaView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp"
                    app:background_color="@color/background"
                    app:corner_radii="15dp"
                    app:divider_size="2dp"/>
            </com.ihsanbal.wiv.AspectRatioLayout>
            <com.ihsanbal.wiv.AspectRatioLayout
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                app:aspect_ratio="1"
                app:dimension_to_adjust="height">
            <com.ihsanbal.wiv.MediaView
                android:id="@+id/mediaView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                app:background_color="@color/background"
                app:corner_radii="15dp"
                app:divider_size="2dp"/>
            </com.ihsanbal.wiv.AspectRatioLayout>
            <com.ihsanbal.wiv.AspectRatioLayout
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                app:aspect_ratio="1"
                app:dimension_to_adjust="height">
            <com.ihsanbal.wiv.MediaView
                android:id="@+id/mediaView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                app:background_color="@color/background"
                app:corner_radii="15dp"
                app:divider_size="2dp"/>
            </com.ihsanbal.wiv.AspectRatioLayout>

</LinearLayout>
        </LinearLayout>
</ScrollView>
