<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="balint.andor.trashexplorer.SettingsActivity"
    android:background="@color/menu_bg"
    android:id="@+id/drawerLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32sp">
                <TextView
                    style="@style/HeaderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings" />
                <ImageButton
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_menu"
                    android:layout_alignParentEnd="true"
                    android:paddingBottom="8dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/header_color"
                    android:layout_below="@id/menuButton"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:src="@drawable/profile"
                    android:contentDescription="@string/changeAvatar"
                    android:layout_marginStart="16dp"/>
                <com.dd.processbutton.iml.ActionProcessButton
                    android:id="@+id/changeAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changeAvatar"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_bg"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/et_border"
                    android:layout_marginTop="32dp"/>
                <TextView
                    android:id="@+id/pwText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change_your_password"
                    style="@style/HeaderText"
                    android:layout_below="@id/line"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"/>
                <include
                    android:id="@+id/change"
                    layout="@layout/password_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pwText"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <include
        android:id="@+id/listView"
        layout="@layout/menu" />
</android.support.v4.widget.DrawerLayout>
